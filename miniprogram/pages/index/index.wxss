@import '../common.wxss';
.placeholder{
    margin: 5px;
    padding: 0 10px;
    text-align: center;
    background-color: #fff;
    height: 2.3em;
    line-height: 2.3em;
    color: rgba(0,0,0,.3);
}
.section_time
{
  flex-direction: row;
  display: flex;
  width:100%;
  min-height: 50rpx;
  line-height: 50rpx;
}

.section
{
  width:50%;
  flex-direction: row;
  display: flex;
  border:2rpx;
  border-style:solid;
  border-radius: 20rpx;
  min-height: 15rpx;
}

.section__title
{
  flex-direction: row;
  display: flex;
  align-items: center;
  justify-content: center;  
}

.picker_date
{
  flex: 6;
}

.picker_time
{
  flex: 4;
}

.picker{
  text-align: center;
}

.mileage_img {
  width: 50rpx;
  height: 50rpx;
}

.track_img
{
  width: 60rpx;
  height: 60rpx;
}

